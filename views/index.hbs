<style>
	.v-header {
		height: 100vh;
		display: flex;
		align-items: center;
	}

	.h-container {
		max-width: 960px;
		padding-left: 1rem;
		padding-right: 1rem;
		margin: auto;
		margin-top: -52px;
		text-align: center;
	}

	.fullscreen-video-wrap {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		overflow: hidden;
	}

	.fullscreen-video-wrap video {
		width: auto;
		display: block;
		position: absolute;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
		z-index: 1;
	}

	@media screen and (max-aspect-ratio: 1920/1080) {
		.fullscreen-video-wrap video {
			height: 100%;
		}
	}

	@media screen and (min-aspect-ratio: 1920/1080) {
		.fullscreen-video-wrap video {
			width: 100%;
		}
	}

	.header-overlay {
		height: 100vh;
		position: absolute;
		top: 0;
		left: 0;
		width: 100vw;
		z-index: 1;
		background: black;
		opacity: 0.7;
	}

	.header-content {
		z-index: 2;
		width: 100%;
	}

	.header-content img {
		margin-bottom: 20px;
	}

	.header-content h1,
	.header-content h4 {
		margin-bottom: 0;
	}

	.header-content h3 {
		display: block;
		font-weight: 200;
		padding-bottom: 2rem;
	}

	.hero h1 {
		font-size: 4rem !important;
		color: white !important;
	}

	.hero img {
		height: 200px;
		width: auto;
	}

	@media (max-width: 960px) {
		.h-container {
			padding-right: 3rem;
			padding-left: 3rem;
		}
	}

	@media (max-width: 590px) {
		.hero img {
			height: auto;
			width: 80%;
		}
	}

	p.ui,
	h5.ui {
		font-size: 16px !important;
	}

	#faq h5 {
		margin-bottom: 0px !important;
	}

	#schedule .column {
		max-width: 700px;
	}
</style>

