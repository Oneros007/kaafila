	<div id="sb">
		<div class="ui center aligned container">
			<h1 class="ui header">Space/Band</h1>
			<div class="ui grid three columns stackable middle center aligned">
				{{#each sbSongs}}
				<div class="column">
					<h2 class="ui header" style="margin-top:10px;">{{this.name}}</h2>
					<div class="ui embed" data-url="{{this.link}}"></div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>

	<div id="sff">
		<div class="ui center aligned container">
			<h1 class="ui header">Songs for Freedom</h1>
			<p class="ui">We released 2-3 songs for Freedom every day during the Festival. Enjoy watching!</p>
			<br>
			<div class="ui grid middle aligned center aligned four columns stackable">
				{{#each sffSongs}}
				<div class="column {{moreSection @index 'sff' 4}}">
					<div class="ui embed" data-url="{{this}}" data-placeholder="https://atkhrfnsco.cloudimg.io/v7/dev.snsartsfestival.in/img/banners/sff-landscape-banner.jpg"></div>
				</div>
				{{/each}}
				{{{moreButton sffSongs 'sff' 4}}}
			</div>
		</div>
	</div>

	<div id="doc-films">
		<div class="ui center aligned container">
			<h1 class="ui header">Documentary Films</h1>
			<br>
			<div class="ui grid middle aligned center aligned three columns stackable">
				{{#each docFilms}}
				<div class="column {{moreSection @index 'doc-films' 3}}">
					<div class="ui embed" data-source="false" data-url="{{this}}"></div>
				</div>
				{{/each}}
				{{{moreButton docFilms 'doc-films' 3}}}
			</div>
		</div>
	</div>

