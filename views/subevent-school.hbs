<style>
	p.ui,
	h5.ui {
		font-size: 16px !important;
	}

	#title h3 {
		margin-top: 0;
		margin-bottom: 2em;
	}

	#faq h5,
	#about h2,
	#about h3,
	#about h4 {
		margin-bottom: 0px !important;
	}

	.ui.borderless.menu {
		background: #085078;
		background: -webkit-linear-gradient(to left, #85D8CE, #085078);
		background: linear-gradient(to left, #6eb4ac, #085078);
	}

	.computer .ui.borderless.menu .active.item {
		border-top: 3px solid white !important;
		background-color: transparent !important;
	}

	.mobile .ui.borderless.menu .active.item {
		background-color: rgba(0, 0, 0, .2) !important;
	}

	#title h1 {
		font-size: 4rem;
	}

	.printRules #title h1 {
		font-size: 3rem;
	}

	.printRules {
		display: none;
	}

	form div.right.aligned, #registerevent {
		margin-right: 0!important;
	}

	form #students .two.fields, #studentAdd {
		margin-bottom: 0.35em!important;
		margin-top: 1.35em!important;
	}

	@media only screen and (max-width: 767px) {
		form #students .two.fields .wide.field {
			margin-bottom: 0.35em!important;
		}
		form #students .two.fields .wide.field:last-child {
			margin-bottom: 0em!important;
		}
	}
</style>

{{>navbar}}

<div class="printRules">
	<div id="title">
		<div class="ui container">
			<h1 style="text-align: center" class="ui center aligned">{{subeventName}}</h1>
		</div>
	</div>
	<div id="about">
		<div class="ui container">
			{{> (lookup . 'pageID')}}
		</div>
	</div>
</div>

<div id="content" class="pastel {{cssID}}">

	<div id="title">
		<div class="ui grid computer tablet only container middle aligned center aligned two columns">
			<div class="column">
				<img src="https://atkhrfnsco.cloudimg.io/v7/dev.snsartsfestival.in/img/banners/{{subeventImage}}?width=410" class="ui medium image centered">
			</div>
			<div class="column left aligned">
				<h1 class="ui header">{{subeventName}}</h1>
				<h3 class="ui header">{{subeventDesc}}</h3>
				{{#if registration}}
					{{#if registration.alreadyRegistered}}
					<a href="/profile"><div class="ui button green">Already Registered</div></a>
					{{else if registration.seatsFull}}
					{{else if userData}}
						<div id="registereventmodalbutton" class="ui button primary" data-name="{{subeventName}}"data-subevent="{{url}}" {{#each registration}}data-{{@key}}="{{this}}"{{/each}}>Register</div>
					{{else}}
						<a href="/signin">
							<div class="ui button primary">Register</div>
						</a>
					{{/if}}
				{{/if}}
			</div>
		</div>
		
		<div class="ui grid mobile only container middle aligned center aligned one columns">
			<div class="column">
				<img src="https://atkhrfnsco.cloudimg.io/v7/dev.snsartsfestival.in/img/banners/{{subeventImage}}?width=410"
					class="ui fluid image">
			</div>
			<div class="column left aligned">
				<h1 class="ui header">{{subeventName}}</h1>
				<h3 class="ui header">{{subeventDesc}}</h3>
				{{#if registration}}
					{{#if registration.alreadyRegistered}}
					<a href="/profile"><div class="ui button green">Already Registered</div></a>
					{{else if registration.seatsFull}}
					{{else if userData}}
						<div id="registereventmodalbuttonm" class="ui button primary" data-name={{subeventName}} data-subevent="{{url}}" {{#each registration}}data-{{@key}}="{{this}}"{{/each}}>Register</div>
					{{else}}
						<a href="/signin">
							<div class="ui button primary">Register</div>
						</a>
					{{/if}}
				{{/if}}
			</div>
		</div>
	</div>

	<div id="about">
		<div class="ui container">
			{{> (lookup . 'pageID')}}
		</div>
	</div>

</div>

{{#if userData}}
{{#unless registration.alreadyRegistered}}
<div id="registereventmodal" class="ui modal">
	<div class="header">
		<h2>Register for {{subeventName}}</h2>
	</div>
	<div class="scrolling content">
		{{#if registration.formID}}
		{{> (lookup . 'formID')}}
		{{else}}
		{{>subevents/forms/stnd}}
		{{/if}}
	</div>
</div>

<div id="registereventconfirmmodal" class="ui modal tiny">
	<div class="content">
		<div class="ui fluid container center aligned">
			<img class="ui centered image tiny" src="https://atkhrfnsco.cloudimg.io/v7/dev.snsartsfestival.in/img/tick.png">
			<h2>Registered successfully for {{subeventName}}</h2>
		</div>
	</div>
</div>
{{/unless}}
{{/if}}

{{>footer}}

<style>
	@media print {

		#content,
		#navbar,
		#footer,
		#printRulesButton,
		.ui.modal {
			display: none !important;
		}

		.printRules {
			display: block;
			position: absolute;
			left: 0;
			top: 0;
		}
	}
</style>