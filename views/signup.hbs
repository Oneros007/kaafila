<style>
  /* body > .grid {
  height: 100%;
} */
  #signin .column {
    max-width: 480px;
  }

  #signin .content img {
    height: 70px;
    margin-bottom: 50px;
  }

  #signup_email {
    background-color: #085078;
    margin-bottom: 2em;
  }

  #signup_email:hover {
    background-color: #074769;
  }

  #signup_email:focus {
    background-color: #063e5c;
  }

  #signup_google {
    font-weight: 700 !important;
  }
</style>

{{>navbar-logo}}
<div id="signin" class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui image header">
      <div class="content">
        <img src="/img/logo-main.png" alt="kaafila_logo">
        Sign up
      </div>
    </h2>
    <form class="ui large form" method="POST" target="">
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui input">
            <input type="text" id="schoolName" placeholder="School Name" value='Shiv Nadar School'>
          </div>
        </div>
        <div class="field">
          <div class="ui input">
            <input type="text" id="schoolRepName" placeholder="School Representative Name" value="Manjima Chatterjee">
          </div>
        </div>
        <div class="field">
          <div class="ui input">
            <input type="email" id="email" placeholder="Email Address" value="contact@snsartsfestival.in">
          </div>
        </div>
        <div class="field">
          <div class="ui input">
            <input type="password" id="password" placeholder="Password" value="loremipsum">
          </div>
        </div>
        <div class="field">
          <div class="ui input">
            <input type="password" id="confirmPassword" placeholder="Confirm Password" value="loremipsum">
          </div>
        </div>
        <button id="signup_email" class="ui fluid large primary button" type="submit">Sign up</button>
        <button id="signup_google" class="ui fluid large basic black button" type="button"><i class="google icon"></i>Sign up with Google</button>
      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
      Already have an Account? <a href="/signin">Sign in</a>
    </div>
  </div>
</div>