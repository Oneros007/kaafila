<style>
  #signup {
    height: 100%;
    padding-top: 150px;
  }

  #signup .column {
    max-width: 480px;
    margin-top: -50px;
  }

  #signup h4 {
    margin: 0;
    margin-bottom: 15px;
  }

  #signup .content img {
    height: 70px;
    margin-bottom: 40px;
  }

  #signup_email {
    background-color: #085078;
    margin-bottom: 2em;
  }

  #signup_email:hover {
    background-color: #074769;
  }

  #signup_email:focus {
    background-color: #063e5c;
  }

  #signup_google {
    font-weight: 700 !important;
  }
</style>

{{>navbar-logo}}
<div id="signup" class="ui center aligned grid">
  <div class="column">
    <h2 class="ui image header">
      <div class="content">
        Sign up
      </div>
    </h2>
    <h4>Currently open only for participating schools</h4>
    <form id="signupform" class="ui large form" method="POST">
      <div class="ui stacked segment left aligned">
        <div class="field">
          <label>School Name</label>
          <div class="ui input">
            <input type="text" id="schoolName" placeholder="School Name">
          </div>
        </div>
        <div class="field">
          <label>School Representative Name</label>
          <div class="ui input">
            <input type="text" id="schoolRepName" placeholder="School Representative Name">
          </div>
        </div>
        <div class="field">
          <label>Email Address</label>
          <div class="ui input">
            <input type="email" id="email" placeholder="Email Address">
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui input">
            <input type="password" id="password" placeholder="Password">
          </div>
        </div>
        <div class="field">
          <label>Confirm Password</label>
          <div class="ui input">
            <input type="password" id="confirmPassword" placeholder="Confirm Password">
          </div>
        </div>
        <button id="signup_email" class="ui fluid large primary button" type="submit">Sign up</button>
        <button id="signup_google" class="ui fluid large basic black button" type="button"><i class="google icon"></i>Sign up with Google</button>
      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
      Already have an Account? <a href="/signin">Sign in</a>
    </div>
  </div>
</div>

<div id="schoolinfomodal" class="ui modal small">
  <div class="header">
    <h2>Enter Your School's Information</h2>
  </div>
  <div class="content">
    <form id="schoolinfoform" class="ui small form">
      <div class="ui stacked">
        <div class="field">
          <label>School Name</label>
          <div class="ui input">
            <input type="text" id="schoolName" placeholder="School Name">
          </div>
        </div>
        <div class="field">
          <label>School Representative Name</label>
          <div class="ui input">
            <input type="text" id="schoolRepName" placeholder="School Representative Name">
          </div>
        </div>
        <div class="ui fluid container column right aligned">
          <button type="submit" id="schoolinfo" class="ui primary button">Submit</button>
        </div>
      </div>

      <div class="ui error message"></div>

    </form>
  </div>
</div>